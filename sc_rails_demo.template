{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Parameters": {
    "KeyPair": {
      "Description": "Choose an existing key pair for access",
      "Type": "String",
      "Default": "SC Lab",
      "AllowedValues": [
        "SC Lab",
        "SPLI_Integration",
        "MoodleKey",
        "chefkey"
      ]
    },
    "ServiceNowUsername": {
      "Description": "Enter your ServiceNow username to be prepended onto instance name tags",
      "Type": "String",
      "MinLength": "1",
      "MaxLength": "64",
      "AllowedPattern": "^(?=.{8,20}$)(?![_.])(?!.*[_.]{2})[a-zA-Z0-9._]+(?<![_.])$"
    }
  },
  "Mappings": {
    "HAProxyAMI": {
      "us-east-1": {
        "AMI": "ami-ad227cc4"
      }
    },
    "RailsAMI": {
      "us-east-1": {
        "AMI": "ami-07b8936d"
      }
    },
    "PostgresAMI": {
      "us-east-01": {
        "AMI": ""
      }
    },
    "SCLabPublicKey": {
      "key": "ssh-rsa  SC Lab"
    }
  },
  "Resources": {
    "HAProxy": {
      "Type": "AWS::EC2::Instance",
      "Properties": {
        "ImageId": "ami-cdb49fa7",
        "InstanceType": "t2.micro",
        "KeyName": {
          "Ref": "KeyPair"
        },
        "SecurityGroupIds": [
          "sg-205c3b44"
        ],
        "SubnetId": "subnet-1759d94e",
        "UserData": {
          "Fn::Base64": {
            "Fn::Join": [
              "",
              [
                "#!/bin/bash\n",
                "sed -i 's/CHANGE_ME_APP01/",
                {
                  "Fn::GetAtt": [
                    "Rails01",
                    "PrivateIp"
                  ]
                },
                "/g' /etc/haproxy/haproxy.cfg",
                "\n",
                "sed -i 's/CHANGE_ME_APP02/",
                {
                  "Fn::GetAtt": [
                    "Rails02",
                    "PrivateIp"
                  ]
                },
                "/g' /etc/haproxy/haproxy.cfg",
                "\n",
                "/etc/init.d/haproxy restart\n"
              ]
            ]
          }
        }
      }
    },
    "Rails01": {
      "Type": "AWS::EC2::Instance",
      "Properties": {
        "ImageId": "ami-3786ad5d",
        "InstanceType": "t2.micro",
        "KeyName": {
          "Ref": "KeyPair"
        },
        "SecurityGroupIds": [
          "sg-205c3b44"
        ],
        "SubnetId": "subnet-1759d94e",
        "UserData": {
          "Fn::Base64": {
            "Fn::Join": [
              "",
              [
                "#!/bin/bash\n",
                "echo",
                {
                  "Fn::FindInMap": [
                    "SCLabPublicKey",
                    "key"
                  ]
                },
                "> /root/.ssh/authorized_keys\n",
                "sed -i 's/CHANGEME_DB/",
                {
                  "Fn::GetAtt": [
                    "Postgres",
                    "PrivateIp"
                  ]
                },
                "/g' /var/www/sc_demo_rails/config/database.yml",
                "\n",
                "cd /var/www/sc_demo_rails\n",
                "unicorn_rails &"
              ]
            ]
          }
        }
      }
    },
    "Rails02": {
      "Type": "AWS::EC2::Instance",
      "Properties": {
        "ImageId": "ami-3786ad5d",
        "InstanceType": "t2.micro",
        "KeyName": {
          "Ref": "KeyPair"
        },
        "SecurityGroupIds": [
          "sg-205c3b44"
        ],
        "SubnetId": "subnet-1759d94e",
        "UserData": {
          "Fn::Base64": {
            "Fn::Join": [
              "",
              [
                "#!/bin/bash\n",
                "echo",
                {
                  "Fn::FindInMap": [
                    "SCLabPublicKey",
                    "key"
                  ]
                },
                "> /root/.ssh/authorized_keys\n",
                "sed -i 's/CHANGEME_DB/",
                {
                  "Fn::GetAtt": [
                    "Postgres",
                    "PrivateIp"
                  ]
                },
                "/g' /var/www/sc_demo_rails/config/database.yml",
                "\n",
                "cd /var/www/sc_demo_rails\n",
                "unicorn_rails &"
              ]
            ]
          }
        }
      }
    },
    "Postgres": {
      "Type": "AWS::EC2::Instance",
      "Properties": {
        "ImageId": "ami-4d8da627",
        "InstanceType": "t2.micro",
        "KeyName": {
          "Ref": "KeyPair"
        },
        "SecurityGroupIds": [
          "sg-205c3b44"
        ],
        "SubnetId": "subnet-1759d94e",
        "UserData": {
          "Fn::Base64": {
            "Fn::Join": [
              "",
              [
                "#!/bin/bash\n"
              ]
            ]
          }
        }
      }
    }
  },
  "Outputs": {
    "Entrypoint": {
      "Value": {
        "Fn::Join": [
          "http://",
          {
            "Fn::GetAtt": [
              "HAProxy",
              "PrivateIp"
            ]
          }
        ]
      },
      "Description": "Private IP of HAProxy server"
    },
    "HAProxyPublicIP": {
      "Value": {
        "Fn::GetAtt": [
          "HAProxy",
          "PublicIp"
        ]
      },
      "Description": "Private IP of HAProxy server"
    },
    "Rails01PublicIP": {
      "Value": {
        "Fn::GetAtt": [
          "Rails01",
          "PublicIp"
        ]
      },
      "Description": "Private IP of Rails01 server"
    },
    "Rails02PublicIP": {
      "Value": {
        "Fn::GetAtt": [
          "Rails02",
          "PublicIp"
        ]
      },
      "Description": "Private IP of Rails02 server"
    },
    "PostgresPublicIP": {
      "Value": {
        "Fn::GetAtt": [
          "Postgres",
          "PublicIp"
        ]
      },
      "Description": "Private IP of Postgres server"
    }
  }
}
